@model MegaCinemaWeb.Models.CinemaViewModel

@{
    ViewBag.Title = ViewBag.FeatureTitle = "Thêm rạp chiếu phim";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_LayoutPageAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.CinemaPrefix, htmlAttributes: new {@class = "control-label" })
        @Html.EditorFor(model => model.CinemaPrefix, new { htmlAttributes = new { @Value = "CNM",  @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CinemaFullName, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.CinemaFullName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CinemaAddress, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.CinemaAddress, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CinemaPhone, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.CinemaPhone, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CinemaEmail, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.CinemaEmail, new { htmlAttributes = new { @class = "form-control" } })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CinemaManagerID, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.CinemaManagerID, (SelectList)ViewBag.StaffID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CinemaStatus, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.CinemaStatus, (SelectList)ViewBag.CinemaStatus, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
