@model MegaCinemaWeb.Models.PromotionCineViewModel

@{
    ViewBag.Title = ViewBag.FeatureTitle = "Thêm ưu đãi cho rạp";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_LayoutPageAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.CinemaID, "Rạp", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.CinemaID, (SelectList)ViewBag.CinemaID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PromotionID, "Ưu đãi", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.PromotionID, (SelectList)ViewBag.PromotionID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "" })
       
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PromotionCineStatusID, "Rạp", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.PromotionCineStatusID, (SelectList)ViewBag.PromotionCineStatusID, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PromotionCineStatusID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="row">
            <input type="submit" value="Lưu" class="btn btn-primary pull-right"/>
        </div>
    </div>
}

