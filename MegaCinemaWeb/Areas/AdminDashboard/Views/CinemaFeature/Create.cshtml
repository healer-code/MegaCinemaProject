@model MegaCinemaWeb.Models.CinemaFeatureViewModel

@{
    ViewBag.Title = "Thêm tính năng Rạp chiếu phim";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.FeatureType, htmlAttributes: new { @class = "control-label" })
        <div class="checkbox">
            @Html.EditorFor(model => model.FeatureType)
            @Html.ValidationMessageFor(model => model.FeatureType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FeatureContent, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.FeatureContent, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FeatureContent, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FeatureDescription, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.FeatureDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FeatureDescription, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>

}

<div>
    @* Return to Index Action in CinemaFeature Controller *@
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
