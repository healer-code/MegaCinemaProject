@model MegaCinemaWeb.Models.RoomFilmDetailViewModel

@{
    ViewBag.Title = ViewBag.FeatureTitle = "Thông tin chi tiết phòng vé";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div id="seat-table-create-detail">
    <ul>
        <li>
            Tên phòng vé: @Model.RoomName
        </li>
        <li>
            Kích thước: @Model.Width x @Model.Height
        </li>
        <li>
            Số lượng ghế Vip chưa chọn vị trí: <span class="vip-ticket-detail">@Model.VipTicket</span>
        </li>
        <li>
            <input type="hidden" id="seat-table-height" value="@Model.Height" />
            <input type="hidden" id="seat-table-width" value="@Model.Width" />
        </li>
    </ul>
</div>

<div id="seat-table-create-map">
    <div id="divLegend" align="center">
        <span>
            <img id="imgEmpty" class="ImageAppletExample" src="~/Content/RoomFilm/seatnone.png" />
            <span id="lblEmpty" class="Legend">Khu vực Standard</span>
        </span>
        <span>
            <img id="imgSold" class="ImageAppletExample" src="~/Content/RoomFilm/seatvip.png">
            <span id="lblSold" class="Legend">Khu vực Vip</span>
        </span>
    </div>
    <div class="Seating-Screen">
        <img src="~/Content/RoomFilm/SeatScreen.png" style="width: 100%" />
    </div>
    <div class="row">
        <ul id="place"></ul>
    </div>
</div>

<div style="clear:both"></div>
<div class="row">
    <button type="button" class="btn btn-primary pull-right" id="seat-table-create-event" onclick="CollectSeatTable()"><i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu</button>
</div>

@Html.Partial("_bookingAlert")

@section scripts {
    <script src="~/Content/scripts/Admin/js/createSeatTable.js"></script>
}

<style>
    #divLegend {
        padding: 3px 0 7px;
    }

    #lblAutoReserved {
        color: #000;
        font-weight: bold;
        padding-right: 10px;
        position: relative;
        top: -6px;
    }

    #lblEmpty {
        color: #000;
        font-weight: bold;
        padding-right: 10px;
        position: relative;
        top: -6px;
    }

    #lblSold {
        color: #000;
        font-weight: bold;
        padding-right: 10px;
        position: relative;
        top: -6px;
    }

    #lblSeatPlaceHolder {
        color: #000;
        font-weight: bold;
        position: relative;
        top: -6px;
    }

    #lblAppletFooter {
        color: #000;
        font-weight: 500;
        padding: 0 10px 15px;
    }

    .sit-position {
        line-height: 20px;
    }

    #seat-table-create-map {
        height: 200px;
        width: 550px;
        margin-left: 10px;
        margin: 0 auto;
        background-color: #F5F5F5;
        border: 1px solid #A4A4A4;
        display: block;
        clear: both;
    }
    .seat-clicked {
         background-image: url('../../../../Content/RoomFilm/seatvip.png');
         color: white!important;
    }
    #place {
        position: relative;
        display: inline-block;
    }

        #place a {
            font-size: 0.8em;
            color: black;
        }

        #place li {
            list-style: none outside none;
            position: absolute;
            display: inline-block;
            cursor: pointer;
            text-align: center;
        }

        #place .seat {
            background: url('../../../../Content/RoomFilm/seatnone.png') no-repeat scroll 0 0 transparent;
            height: 25px;
            width: 25px;
            display: block;
        }

        #place .selectedSeat {
            background-image: url('../../../../Content/RoomFilm/seatvip.png');
        }

        #place .selectingSeat {
            background-image: url('../../../../Content/RoomFilm/seatvip.png');
        }

        #place .row-3, #place .row-4 {
            margin-top: 10px;
        }

    #seatDescription li {
        verticle-align: middle;
        list-style: none outside none;
        padding-left: 35px;
        height: 35px;
        float: left;
    }
</style>