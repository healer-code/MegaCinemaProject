@model MegaCinemaWeb.Models.FilmFormatViewModel

@{
    ViewBag.Title = ViewBag.FeatureTitle = "Thêm định dạng phim";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_LayoutPageAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.FilmFormatName, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.FilmFormatName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FilmFormatName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FilmFormatDescrip, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.FilmFormatDescrip, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FilmFormatDescrip, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
